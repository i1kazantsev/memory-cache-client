{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ESNext"],
    "module": "commonjs",
    "rootDir": "./src/",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "exclude": [
    // prettier-ignore
    "node_modules",
    "dist",
    "test"
  ]
}
